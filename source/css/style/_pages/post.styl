.post-list
    &>:last-child
        margin-bottom 0

.post-entry
    margin-bottom var(--space)
    position relative
    box-shadow 0 2px 4px rgba(3,27,78,.06)
    transition none

.post-list-card
    background-color var(--bg-content-color)
    max-width var(--content-width)
    margin 0 auto calc(var(--space) * 0.6)
    transition background-color .6s
    padding calc(var(--space) * 0.6) calc(var(--space) * 0.8)
    border-radius $radius_main
    border 1px solid #E5E8ED

    &>:first-child
        margin-top 0

    &>:last-child
        margin-bottom 0
    
    @media screen and (max-width:650px)
        padding calc(var(--space) * 0.8) calc(var(--space) * 0.8)

.post-entry__content
    color $color_secondary
    .post-entry__title
        color $color_title
        margin 0
        padding-bottom 0
        border none
        font-size 1.4rem
        font-weight 600
        transition-duration .2s
        font-family: $font_family_title
        line-height: 1.4
        &:hover
            color var(--theme-color)
        @media screen and (max-width:650px)
            font-size 1.2rem

.post-entry__meta
    @media screen and (max-width:650px)
        font-size .9em

.post-meta__cats
.post-entry__tags
    display inline-block
    position relative
    z-index 1

    &:empty
        display none

.post-entry__link
    &:hover
        text-decoration none !important

.post-title
    text-align center
    margin ($cover_top_margin - $main_margin_top) 0 $cover_bottom_margin 0

.is-page .post-title__text
    font-size: 40px
    @media screen and (max-width:650px)
        font-size: 36px

.cover .cover__logo > h1
    font-size: 40px
    @media screen and (max-width:650px)
        font-size: 36px

.post-title__text
    font-family $font_family_title
    font-weight 700
    margin-top: 0

.post-meta__date
    color $color_secondary

.post-title__meta
.post-entry__meta
    display block
    z-index 1
    position relative

    color: $color_secondary

    &:empty
        display none
    
    .post-meta__category
        color: $color_secondary
        &:hover
            color var(--theme-color)

.post-entry__meta
    margin-top calc(var(--space) * 0.3)
    line-height: 1

.post-title__meta
    margin-bottom calc(var(--space) * 0.2)
    line-height: 1.8

.post-entry__header
.post__header
    margin calc(var(--space) * -1) !important
    margin-bottom calc(var(--space) / 2) !important
    overflow hidden
    border-radius $radius_main

    &:empty
        display none

    .post-thumbnail
        display flex
        width 100%
        padding-bottom 40%
        background-size cover
        background-repeat repeat
        background-position 50% 50%
        background-origin padding-box
        background-attachment scroll

.post__content
    p
        line-height $lineheight

    img
        &.inline
            display inline

    div>img,p>img,div>picture>img,p>picture>img
        display block
        margin auto
        border-radius 4px

    a[href]:not(.button)
        border-bottom 2px solid transparent
        color $color_theme
        text-decoration none
        &:hover
            border-color $color_theme
            color $color_theme
            text-decoration none

    span
        img
            display inline
            margin auto

    h2:first-child
        margin-top 0

.post__comments
    max-width var(--content-width)
    margin var(--space) auto

    &:empty
        display none

.post-footer__meta
    font-size 14px
    margin-top 1.5rem

    &>:last-child
        margin-bottom 0

    &:empty
        display none

.post-tags__link
.post-cats__link
    display inline-block
    margin .35em
    font-size .75em
    text-decoration none
    background-color var(--bg-cat-color)
    color currentColor !important
    padding 0.25rem 0.6rem 0.25rem 0.6rem
    border-radius $radius_button

.post-tags__link
    background-color var(--bg-tag-color)

.post__license {
    position: relative;
    line-height: 1.2;
    font-size: 1rem;
    background: $color_background;
    color: $color_primary;
    margin: 2rem calc(-1 * var(--space)) 0;
    overflow: hidden;
    display: block;
    padding: 1.25em 2.5em
}

