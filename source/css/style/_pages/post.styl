.license-meta-title, .license-title {
    margin: 0 0 .25rem
}

.license-link,.license-meta-title {
    font-size: .8rem
}

.license-meta-text
    margin 0
    .license-meta-link 
        color $color_primary

.license-meta {
    margin-top: 1rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap
}

.license-meta-item {
    margin: 0 2rem 1em 0
}

.post__license .license-link 
    color $color_secondary

.post__expire
    display none
    margin calc(var(--space) / 2) var(--space) 0 var(--space)
    padding .5rem .8rem
    background #ffffc0
    border-left 4px solid #fff000
    list-style none
    
    p
        color #947600
        margin 3px 1px 3px 1px
        padding 0