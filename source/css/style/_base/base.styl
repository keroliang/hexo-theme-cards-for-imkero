:root
    --theme-color $color_theme
    --bg-color $color_background
    --bg-content-color $color_card
    --bg-menu #eceef2
    --bg-tag-color $color_tags_block
    --bg-cat-color $color_categories_block
    --bg-code $color_codeblock
    --bg-codeblock #f8f8f8
    --body-color $color_primary
    --title-color $color_title
    --border-color rgba(0,0,0,0.1)
    --space $space_main
    --content-width $max_width_main

::-webkit-scrollbar 
    width .55rem !important
    height .40rem !important
    background 0 0 !important

::-webkit-scrollbar-thumb
    background #b5b5b5 !important

@media screen and (max-width: 762px)
    ::-webkit-scrollbar 
        width .25rem !important
        height .16rem !important

body
    --base-font-size $fontsize
    font-size var(--base-font-size)
    font-weight 400
    font-family $font_family
    background-color var(--bg-color)
    color var(--body-color)
    margin 0
    padding 0
    line-height $lineheight

@media screen and (max-width:650px)
    body
        --space $space_sm

article
aside
figure
details
footer
header
nav
section
    display block

.main
    margin 0 auto
    padding $main_margin_top 12px 0

    &.tagscloud
    &.links 
        margin 0 auto
        max-width 1024px
