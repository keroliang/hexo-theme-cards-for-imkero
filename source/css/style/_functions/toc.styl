.toc
    display block
    font-size $toc_fontsize
    overflow auto
    list-style-type none
    padding-left 0
    line-height 2


    .toc-link
        color $color_secondary
    
    @media screen and (min-width: 1080px)
        &:hover .toc-link
            color $color_primary

    .toc-link:hover
        text-decoration none
        color $color_theme

    .toc-child
        padding-left 0.6rem
        list-style-type none

.btn-toc
    display none
    width 3rem
    height 3rem
    position fixed
    z-index 1001
    right 1.2rem
    bottom 4.8rem
    border-radius $radius_button
    color var(--title-color)
    background var(--bg-content-color)
    box-shadow 0 .3rem .6rem rgba(48,55,66,.15);

    *
        margin 8px

    &.active + .toc-cancel + .toc-menus
        display block

    &.active + .toc-cancel
        display block

.toc-cancel
    display: none
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index 1000
    user-select: none
    -webkit-user-select: none

.toc-menus
    display none
    position fixed
    left 12px
    right 12px
    bottom 12px
    max-height 60vh
    overflow auto
    border-radius 6px
    padding 24px
    background var(--bg-content-color)
    box-shadow 1px 1px 5px 0 rgba(0,0,0,.02),1px 1px 15px 0 rgba(0,0,0,.03)
    z-index 9999

    .toc-title
        font-size 0.9rem
        color $color_secondary
        margin-bottom 0.8rem
        padding-bottom 0.2rem
        border-bottom 1px solid #eaecef

.post-side
    display block
    height 0
    float right
    position -webkit-sticky
    position sticky
    top: 'calc(%s + 10px)' % $header_height
            
    .post-side__toc
        display block
        
        .toc
            display none
            width 'calc((100vw - %s) / 2 - 12.6px)' % $max_width_main
            height 'calc(100vh - %s * 2 - 20px)' % $header_height
            padding-left 1.2rem


@media screen and (max-width: 1246px)
    .post-side
        width calc(100vw / 6 - 20px)
        
        .post-side__toc
            .toc
                width calc(100vw / 6 - 20px)

    .post__with-toc
        max-width calc(100vw / 6 * 4)

@media screen and (max-width: 1080px)
    .post-side
        width calc(100vw / 4 - 30px)
        
        .post-side__toc
            .toc
                width calc(100vw / 4 - 30px)
    
    .post__with-toc
        max-width calc(100vw / 4 * 3)
        margin-left 0

@media screen and (min-width: 765px)
    .post-side
        .post-side__toc
            .toc
                display block
    
@media screen and (max-width: 764px)
    .post__with-toc
        max-width var(--w)

    #btn-toc
        display block
