<% if (is_post() && theme.meta.copyright.enable && page.copyright !== false) { %>
    <div class="post__license">
        <div class="license-title"><%= page.title %></div>
        <div class="license-link-line">
            <a href="<%= page.permalink %>" class="license-link button"><%= page.permalink %></a>
        </div>
        <div class="license-meta">
            <div class="license-meta-item">
                <div class="license-meta-title"><%= __('post.copyright.author') %></div>
                <div class="license-meta-text"><%= theme.meta.author.name %></div>
            </div>
            <div class="license-meta-item">
                <div class="license-meta-title">最后更新</div>
                <div class="license-meta-text"><%= date(page.updated, theme.meta.updated.format) %></div>
            </div>
            <div class="license-meta-item">
                <div class="license-meta-title">许可协议</div>
                <div class="license-meta-text">
                    <a href="<%= theme.meta.copyright.license_url %>" rel="nofollow noopener noreferrer" target="_blank" class="button license-meta-link"><%= theme.meta.copyright.license_name %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>